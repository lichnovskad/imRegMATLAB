%% makeImSet
clc;clear;close all;

inStr = '/home/daniela/Plocha/Bakalářka/dataset/video/new/vid13.mov';
outStr = 'vidSet/set13';
dist = [37 75]; %minDist maxDist frames
 
[frameList, fmVect, info] = makeImSet(inStr, outStr, dist);
%% registrace
clc;clear;close all;

inputFold = 'vidSet/set1/';
outputName = 'simil';
outputFold = strcat(inputFold,'aff/');

colBorder = false;
cylf = 1500;
doCylWarp = false;


%[pan, imOrder] = registrace(inputFold, {outputFold, outputName},{doCylWarp, cylf}, colBorder);
type = 'similarity';
divide = 20;

[pan, imOrder] = registrace_old(inputFold,{outputFold, outputName}, colBorder, divide, type);
%%
I1 = imread('vidSet/set3/vidFrame01.png');
I2 = imread('vidSet/set3/vidFrame02.png');
I3 = imread('vidSet/set3/vidFrame03.png');
I4 =imread('vidSet/set3/vidFrame04.png'); 
scene1= {I1,I2};
scene2= {I3,I4};
[result1, error1] = transformCheck(scene1);
[result2, error2] = transformCheck(scene2);

scene3  = {result1, result2};
[result3, error3] = transformCheck(scene3);
